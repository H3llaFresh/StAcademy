<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_variant_result_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_24"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toTopOf="@+id/text_task_description_result_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Вариант: 8" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_task_description_result_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toTopOf="@+id/text_count_date_result_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_variant_result_item"
        tools:text="Задание: Вычисление 8-го числа Леонардо" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_count_date_result_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toTopOf="@+id/text_result_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_task_description_result_item"
        tools:text="Дата вычисления: 21 Ноября 2020" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_result_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_24"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_count_date_result_item"
        tools:text="Результат вычисления 8" />

</androidx.constraintlayout.widget.ConstraintLayout>